{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "declarationDir": "./dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": false,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}